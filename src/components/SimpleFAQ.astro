---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  id?: string;
  title: string;
  items: FAQItem[];
  theme?: 'light' | 'dark';
  background?: 'light' | 'lightgray' | 'dark' | 'primary';
}

const {
  id,
  title,
  items,
  theme = 'light',
  background = 'light',
} = Astro.props;
---

<section
  class="section section-faq-simple"
  id={id}
  data-theme-section={theme}
  data-bg-section={background}
>
  <div class="container">
    <div class="row row-title">
      <div class="col">
        <h2>{title}</h2>
      </div>
    </div>
    <div class="row row-list accordion visible">
      <ul class="faq-list">
        {items.map((faq) => (
          <li
            class="single-faq-card single-accordion-item card-hover"
            data-accordion-status="not-active"
          >
            <button class="top" data-accordion-toggle>
              <h3 class="h5">{faq.question}</h3>
              <div class="plus">
                <div class="plus-fill" />
                <div class="bar bar-top" />
                <div class="bar bar-bottom" />
              </div>
            </button>
            <div class="bottom">
              <div class="bottom-wrap">
                <div class="bottom-content styled-content">
                  <p>{faq.answer}</p>
                </div>
              </div>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .section-faq-simple {
    padding: clamp(3rem, 9vw, 6rem) 0;
  }

  .row-title {
    margin-bottom: clamp(2rem, 6vw, 3rem);
  }

  .row-title h2 {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin: 0;
    color: #0d1c3a;
  }

  [data-theme-section="dark"] .row-title h2 {
    color: rgba(255, 255, 255, 0.92);
  }

  .faq-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .single-faq-card {
    border: 1px solid rgba(13, 28, 58, 0.15);
    border-radius: 12px;
    overflow: hidden;
    background: white;
    transition: all 0.3s ease;
  }

  [data-theme-section="dark"] .single-faq-card {
    border-color: rgba(255, 255, 255, 0.15);
    background: rgba(28, 29, 36, 0.7);
  }

  .single-faq-card:hover {
    border-color: rgba(43, 116, 255, 0.3);
    box-shadow: 0 5px 15px rgba(43, 116, 255, 0.1);
  }

  [data-theme-section="dark"] .single-faq-card:hover {
    border-color: rgba(43, 116, 255, 0.5);
    box-shadow: 0 5px 15px rgba(43, 116, 255, 0.2);
  }

  .top {
    width: 100%;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
  }

  .top h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: #0d1c3a;
  }

  [data-theme-section="dark"] .top h3 {
    color: rgba(255, 255, 255, 0.92);
  }

  .plus {
    position: relative;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .plus .bar {
    position: absolute;
    background: #0d1c3a;
    transition: transform 0.3s ease;
  }

  [data-theme-section="dark"] .plus .bar {
    background: rgba(255, 255, 255, 0.92);
  }

  .plus .bar-top {
    top: 50%;
    left: 0;
    width: 100%;
    height: 2px;
    transform: translateY(-50%);
  }

  .plus .bar-bottom {
    top: 0;
    left: 50%;
    width: 2px;
    height: 100%;
    transform: translateX(-50%);
  }

  .single-accordion-item[data-accordion-status="active"] .plus .bar-bottom {
    transform: translateX(-50%) rotate(90deg);
  }

  .bottom {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .single-accordion-item[data-accordion-status="active"] .bottom {
    max-height: 500px;
  }

  .bottom-wrap {
    padding: 0 1.5rem 1.5rem;
  }

  .bottom-content p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(13, 28, 58, 0.75);
  }

  [data-theme-section="dark"] .bottom-content p {
    color: rgba(255, 255, 255, 0.78);
  }

  @media (max-width: 768px) {
    .top {
      padding: 1.25rem;
    }

    .top h3 {
      font-size: 1.1rem;
    }

    .bottom-wrap {
      padding: 0 1.25rem 1.25rem;
    }

    .bottom-content p {
      font-size: 0.95rem;
    }
  }
</style>