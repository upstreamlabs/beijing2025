---
interface Props {
  cities: string[];
  class?: string;
}

const { cities, class: className } = Astro.props;
---

<div class={`city-tour ${className || ''}`}>
  {cities.map((city, index) => (
    <>
      <span class="city-name">{city}</span>
      {index < cities.length - 1 && <span class="separator">ï½œ</span>}
    </>
  ))}
</div>

<style>
  .city-tour {
    display: inline-flex;
    align-items: center;
    gap: 0.25em;
    padding: 0.25em 0.75em;
    border-radius: 100em;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    font-size: 0.85em;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .city-name {
    white-space: nowrap;
  }

  .separator {
    opacity: 0.7;
  }
</style>