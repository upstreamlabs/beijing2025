---
import Button from "components/Button.astro";
import Badge from "components/Badge.astro";

interface HeroLink {
  text: string;
  link: string;
  openInNewTab?: boolean;
}

interface HeroLogo {
  src: string;
  alt: string;
}

interface HeroBadge {
  text: string;
  type: 'voting' | 'training' | 'city';
}

interface Props {
  title: string;
  tagline?: string;
  quote?: string;
  description?: string;
  secondaryDescription?: string;
  date?: string;
  location?: string;
  backgroundImage?: string;
  backgroundVideo?: string;
  videoPoster?: string;
  backgroundAlt?: string;
  logosHeading?: string;
  logos?: HeroLogo[];
  highlights?: string[];
  links?: HeroLink[];
  badges?: HeroBadge[];
  mottoCn?: string;
  mottoEn?: string;
}

const {
  title,
  tagline,
  quote,
  description,
  secondaryDescription,
  date,
  location,
  backgroundImage,
  backgroundVideo,
  videoPoster,
  backgroundAlt = "Abstract flowing light pattern",
  logosHeading,
  logos,
  highlights,
  links,
  badges,
  mottoCn,
  mottoEn,
} = Astro.props;

const splitTagline = tagline && tagline.includes('|') ? tagline.split('|') : undefined;
const fallbackCn = splitTagline ? splitTagline[0]?.trim() : tagline?.trim();
const fallbackEn = splitTagline && splitTagline[1] ? splitTagline[1].trim() : undefined;
const cnLine = (mottoCn ?? fallbackCn) || null;
const enLine = (mottoEn ?? fallbackEn) || null;

// Detect if this is an English page
const pathname = Astro.url.pathname;
const isEnglishPage = pathname.startsWith('/en/');

// Split title if it contains a pipe character
const splitTitle = title && title.includes('|') ? title.split('|') : null;
const titleFirstPart = splitTitle ? splitTitle[0]?.trim() : null;
const titleSecondPart = splitTitle ? splitTitle[1]?.trim() : null;
---

<link rel="stylesheet" href="https://g.alicdn.com/platform/c/alipuhuiheavy/3.0.0/index.css">

<section
  class="section section-home-header full-height"
  data-theme-section="dark"
  data-bg-section="header-home"
>
  {backgroundVideo ? (
    <div class="overlay overlay-background overlay-background-video">
      <div class="styled-video playpause overlay">
        <video
          class="overlay"
          preload="auto"
          onloadstart="this.playbackRate=0.5"
          autoplay
          loop
          muted
          webkit-playsinline
          playsinline
          poster={videoPoster}
        >
          <!-- Use compressed version for mobile, high quality for desktop -->
          <source src={backgroundVideo.replace('.webm', '-compressed.webm')} type="video/webm" media="(max-width: 768px)" />
          <source src={backgroundVideo} type="video/webm" />
        </video>
      </div>
      <div class="overlay overlay-gradient-v2" />
    </div>
  ) : (
    <div class="overlay overlay-background overlay-background-default">
      <div class="overlay overlay-gradient-v2" />
    </div>
  )}

  <div class="container">
    <div class="row">
      <div class="col hero-column">
        <div class="hero-content-top">
          <div class="hero-title">
            {splitTitle ? (
              <h1 class={`display-title ${isEnglishPage ? 'en-title' : ''}`}>
                <span class="title-gobi">{titleFirstPart}</span>
                <br />
                <span class="title-english">{titleSecondPart}</span>
              </h1>
            ) : (
              <h1 class={`display-title ${isEnglishPage ? 'en-title' : ''}`}>{title}</h1>
            )}
            {(date || location) && (
              <div class="event-facts immediate">
                <p>{date && location ? `${date} Â· ${location}` : (date || location)}</p>
              </div>
            )}
            {badges && badges.length > 0 && (
              <div class="hero-badges">
                {badges.map((badge) => (
                  <Badge text={badge.text} type={badge.type} />
                ))}
              </div>
            )}
          </div>

          {(cnLine || enLine) && (
            <div class={`hero-eyebrow ${cnLine && enLine ? 'multiline' : ''}`}>
              {cnLine && <span class="cn">{cnLine}</span>}
              {cnLine && enLine && <span class="separator">|</span>}
              {enLine && <span class="en">{enLine}</span>}
            </div>
          )}

          {quote && <p class="hero-quote">{quote}</p>}

          {description && <p class="hero-description">{description}</p>}

          {secondaryDescription && <p class="hero-description secondary">{secondaryDescription}</p>}

          {highlights?.length && (
            <ul class="hero-highlights">
              {highlights.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )}

          {logos?.length && (
            <div class="organizer-block">
              {logosHeading && <p class="organizer-heading">{logosHeading}</p>}
              <div class="organizer-logos">
                {logos.map((logo) => (
                  <img src={logo.src} alt={logo.alt} class="org-logo" loading="lazy" />
                ))}
              </div>
            </div>
          )}
        </div>

        {links?.length && (
          <div class="btn-home-wrap">
            {links.map((loop) => (
              <Button
                text={loop.text}
                link={loop.link}
                openInNewTab={loop?.openInNewTab}
                class="btn light xl btn-hover fade-in-last"
              />
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-column {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: calc(100vh - 6rem);
    padding-top: clamp(4rem, 15vh, 10rem);
    align-items: center;
    position: relative;
  }

  .hero-content-top {
    width: 100%;
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    text-align: center;
  }

  .hero-eyebrow {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.82);
    margin-bottom: 1.5rem;
  }

  .hero-eyebrow.multiline {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    letter-spacing: normal;
    text-transform: none;
    color: white;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 1.5rem;
    margin-bottom: 0;
  }

  .hero-eyebrow.multiline .cn {
    font-size: clamp(1.3rem, 2.2vw, 1.6rem);
    font-weight: 400;
    letter-spacing: 0.03em;
    font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-eyebrow.multiline .en {
    font-size: clamp(1.3rem, 2.2vw, 1.6rem);
    font-weight: 600;
    letter-spacing: -0.01em;
    font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-eyebrow.multiline .separator {
    font-size: clamp(1.2rem, 2.1vw, 1.5rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
  }

  .hero-title {
    margin-bottom: 0;
    text-align: center;
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-badges {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    gap: 0.5rem;
    transform: translateY(-50%);
  }

  .event-facts.immediate {
    display: inline-flex;
    justify-content: center;
    margin: 2.5rem 0 0;
    align-items: center;
    text-align: center;
    width: auto;
    max-width: 100%;
  }

  .event-facts.immediate p {
    margin: 0;
    font-size: clamp(0.95rem, 1.6vw, 1.15rem);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: 0.05em;
    white-space: nowrap;
    text-align: center;
  }

  .display-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    color: white;
    line-height: 1.15;
    margin: 0;
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
    text-align: center;
  }

  .display-title.en-title {
    font-family: 'AlibabaPuHuiTi-3-85-Bold', 'Alibaba PuHuiTi', 'PingFang SC', 'Microsoft YaHei', sans-serif;
    font-weight: 700;
    letter-spacing: -0.01em;
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .display-title .title-gobi {
    font-family: 'AlibabaPuHuiTi-3-85-Bold', 'Alibaba PuHuiTi', 'PingFang SC', 'Microsoft YaHei', sans-serif;
    font-weight: 700;
    letter-spacing: 0.19em;
  }

  .display-title .title-chinese {
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
    font-weight: 400;
  }

  .display-title .title-english {
    font-family: 'AlibabaPuHuiTi-3-85-Bold', 'Alibaba PuHuiTi', 'PingFang SC', 'Microsoft YaHei', sans-serif;
    font-weight: 700;
    font-size: 0.75em;
    letter-spacing: 0.05em;
  }

  /* Override for Chinese page - use Chinese font for title-english, but keep GOBI 2025 as Alibaba */
  .display-title:not(.en-title) .title-gobi {
    font-family: 'AlibabaPuHuiTi-3-85-Bold', 'Alibaba PuHuiTi', 'PingFang SC', 'Microsoft YaHei', sans-serif;
    font-weight: 700;
    letter-spacing: 0.19em;
    font-size: 0.8em;
  }

  .display-title:not(.en-title) .title-english {
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
    font-weight: 400;
    font-size: 0.85em;
    letter-spacing: 0.05em;
  }

  .display-title .title-separator {
    font-weight: 300;
    opacity: 0.7;
  }

  .hero-quote {
    font-size: 1.25rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.95);
    width: 100%;
    max-width: 1000px;
    margin: 2.5rem 0 0;
    text-align: left;
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
    font-weight: 400;
  }

  .hero-description {
    font-size: clamp(1.3rem, 2vw, 1.5rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    width: 100%;
    max-width: 1000px;
    margin: 2rem 0 0;
    text-align: center;
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
  }

  .hero-description.secondary {
    margin: 1.5rem 0 0;
    font-size: clamp(1.25rem, 1.9vw, 1.45rem);
  }

  .event-facts {
    display: flex;
    gap: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .event-facts p {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .hero-highlights {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
    display: grid;
    gap: 0.75rem;
    width: 100%;
  }

  .hero-highlights li {
    position: relative;
    padding-left: 1.75rem;
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.88);
    line-height: 1.5;
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
  }

  .hero-highlights li::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.55rem;
    width: 0.65rem;
    height: 0.65rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #2b74ff, #ffc640);
  }

  .organizer-block {
    margin-top: 6rem;
    text-align: center;
  }

  .organizer-heading {
    font-size: 1.632rem;
    text-transform: uppercase;
    letter-spacing: 0.24em;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.02rem;
    font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .organizer-logos {
    display: flex;
    gap: 2rem;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
  }

  .org-logo {
    height: 88px;
    width: auto;
    object-fit: contain;
  }

  .org-logo[src*="innoecos"] {
    height: 158px;
  }

  .btn-home-wrap {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .btn-home-wrap :global(.btn) {
    width: 180px;
    white-space: nowrap;
  }

  .btn-home-wrap :global(.btn .btn-content) {
    width: 100%;
  }

  @media (max-width: 768px) {
    .hero-eyebrow {
      margin-bottom: 1rem;
    }

    .hero-eyebrow.multiline {
      gap: 0.4rem;
      margin-top: 1rem;
      margin-bottom: 0;
    }

    .organizer-block {
      margin-top: 3rem;
    }

    .organizer-heading {
      font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      font-size: 1.306rem;
      letter-spacing: 0.24em;
    }

    .hero-eyebrow.multiline .cn {
      font-size: clamp(0.85rem, 2.8vw, 1.05rem);
      letter-spacing: 0.02em;
      font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .hero-eyebrow.multiline .en {
      font-size: clamp(0.75rem, 2.5vw, 0.95rem);
      font-weight: 600;
      letter-spacing: -0.01em;
      font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }

    .hero-eyebrow.multiline .separator {
      font-size: clamp(0.8rem, 2.6vw, 1rem);
    }

    .display-title {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .display-title.en-title {
      font-size: clamp(1.8rem, 7vw, 2.5rem);
    }

    .hero-quote {
      font-size: 1.1rem;
      line-height: 1.7;
      margin-top: 2rem;
    }

    .hero-description {
      font-size: 1rem;
      margin-top: 1.5rem;
    }

    .organizer-logos {
      gap: 1.25rem;
    }

    .org-logo {
      height: 68px;
    }

    .org-logo[src*="innoecos"] {
      height: 122px;
    }

    .hero-column {
      min-height: auto;
      padding-top: clamp(3rem, 12vh, 6rem);
    }

    .btn-home-wrap {
      position: static;
      transform: none;
      left: auto;
      bottom: auto;
      width: 100%;
      margin-top: 2.5rem;
      justify-content: center;
    }

    .btn-home-wrap :global(.btn) {
      width: 100%;
      max-width: 320px;
    }
  }

  .overlay-background-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    opacity: 0.95;
  }

  .styled-video {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .styled-video.playpause video {
    object-fit: cover;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .styled-video[data-ratio-status="true"] {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .styled-video[data-ratio-status="true"] video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
