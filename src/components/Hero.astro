---
import Button from "components/Button.astro";
import Badge from "components/Badge.astro";

interface HeroLink {
  text: string;
  link: string;
  openInNewTab?: boolean;
}

interface HeroLogo {
  src: string;
  alt: string;
}

interface HeroBadge {
  text: string;
  type: 'voting' | 'training' | 'city';
}

interface Props {
  title: string;
  tagline?: string;
  quote?: string;
  description?: string;
  secondaryDescription?: string;
  date?: string;
  location?: string;
  backgroundImage?: string;
  backgroundVideo?: string;
  videoPoster?: string;
  backgroundAlt?: string;
  logosHeading?: string;
  logos?: HeroLogo[];
  highlights?: string[];
  links?: HeroLink[];
  badges?: HeroBadge[];
  mottoCn?: string;
  mottoEn?: string;
}

const {
  title,
  tagline,
  quote,
  description,
  secondaryDescription,
  date,
  location,
  backgroundImage,
  backgroundVideo,
  videoPoster,
  backgroundAlt = "Abstract flowing light pattern",
  logosHeading,
  logos,
  highlights,
  links,
  badges,
  mottoCn,
  mottoEn,
} = Astro.props;

const splitTagline = tagline && tagline.includes('|') ? tagline.split('|') : undefined;
const fallbackCn = splitTagline ? splitTagline[0]?.trim() : tagline?.trim();
const fallbackEn = splitTagline && splitTagline[1] ? splitTagline[1].trim() : undefined;
const cnLine = (mottoCn ?? fallbackCn) || null;
const enLine = (mottoEn ?? fallbackEn) || null;

// Detect if this is an English page
const pathname = Astro.url.pathname;
const isEnglishPage = pathname.startsWith('/en/');

// Split title if it contains a pipe character
const splitTitle = title && title.includes('|') ? title.split('|') : null;
const titleFirstPart = splitTitle ? splitTitle[0]?.trim() : null;
const titleSecondPart = splitTitle ? splitTitle[1]?.trim() : null;
---

<link rel="stylesheet" href="https://g.alicdn.com/platform/c/alipuhuiheavy/3.0.0/index.css">

<section
  class="section section-home-header full-height"
  data-theme-section="dark"
  data-bg-section="header-home"
>
  {backgroundVideo ? (
    <div class="overlay overlay-background overlay-background-video">
      <div class="styled-video playpause overlay">
        <video
          class="overlay"
          preload="auto"
          onloadstart="this.playbackRate=0.5"
          autoplay
          loop
          muted
          webkit-playsinline
          playsinline
          poster={videoPoster}
        >
          <!-- Use compressed version for mobile, high quality for desktop -->
          <source src={backgroundVideo.replace('.webm', '-compressed.webm')} type="video/webm" media="(max-width: 768px)" />
          <source src={backgroundVideo} type="video/webm" />
        </video>
      </div>
      <div class="overlay overlay-gradient-v2" />
    </div>
  ) : (
    <div class="overlay overlay-background overlay-background-default">
      <div class="overlay overlay-gradient-v2" />
    </div>
  )}

  <div class="container">
    <div class="row">
      <div class="col hero-column">
        <div class="hero-content-top">
          <div class="hero-title">
            {splitTitle ? (
              <h1 class={`display-title ${isEnglishPage ? 'en-title' : ''}`}>
                <span class="title-gobi" style="font-size: clamp(0.9765625rem, 1.953125vw, 1.5625rem) !important; display: inline-block;" data-mobile-size="clamp(0.48828125rem, 0.9765625vw, 0.78125rem)">{titleFirstPart}</span>
                <br />
                <span class="title-english">{titleSecondPart}</span>
              </h1>
            ) : (
              <h1 class={`display-title ${isEnglishPage ? 'en-title' : ''}`}>{title}</h1>
            )}
            {(date || location) && (
              <div class="event-facts immediate">
                <p>{date && location ? `${date} ¬∑ ${location}` : (date || location)}</p>
              </div>
            )}
            {badges && badges.length > 0 && (
              <div class="hero-badges">
                {badges.map((badge) => (
                  <Badge text={badge.text} type={badge.type} />
                ))}
              </div>
            )}
          </div>

          {(cnLine || enLine) && (
            <div class={`hero-eyebrow ${cnLine && enLine ? 'multiline' : ''}`}>
              {cnLine && <span class="cn">{cnLine}</span>}
              {cnLine && enLine && <span class="separator">|</span>}
              {enLine && <span class="en">{enLine}</span>}
            </div>
          )}

          {quote && <p class="hero-quote">{quote}</p>}

          {description && <p class="hero-description">{description}</p>}

          {secondaryDescription && <p class="hero-description secondary">{secondaryDescription}</p>}

          {highlights?.length && (
            <ul class="hero-highlights">
              {highlights.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )}

          {logos?.length && (
            <div class="organizer-block">
              {logosHeading && <p class="organizer-heading">{logosHeading}</p>}
              <div class="organizer-logos">
                {logos.map((logo) => (
                  <img src={logo.src} alt={logo.alt} class="org-logo" loading="lazy" />
                ))}
              </div>
            </div>
          )}
        </div>

        {links?.length && (
          <div class="btn-home-wrap">
            {links.map((loop) => (
              <Button
                text={loop.text}
                link={loop.link}
                openInNewTab={loop?.openInNewTab}
                class="btn light xl btn-hover fade-in-last"
              />
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
<script>
    // Handle responsive GOBI logo sizing
    function updateGobiLogoSize() {
      console.log('üîç updateGobiLogoSize called');
      const gobiLogo = document.querySelector('.title-gobi[data-mobile-size]');
      console.log('üéØ Found GOBI logo element:', gobiLogo);

      if (gobiLogo) {
        const isMobile = window.innerWidth <= 768;
        console.log('üì± Is mobile:', isMobile);

        // Force our new sizes directly to ensure they're applied
        const mobileSize = 'clamp(0.48828125rem, 0.9765625vw, 0.78125rem)';
        const desktopSize = 'clamp(0.9765625rem, 1.953125vw, 1.5625rem)';

        const newSize = isMobile ? mobileSize : desktopSize;
        console.log('üìè Applying new font size:', newSize);

        gobiLogo.style.fontSize = newSize + ' !important';
        console.log('‚úÖ Font size set to:', gobiLogo.style.fontSize);
      } else {
        console.error('‚ùå GOBI logo element not found!');
      }
    }

    // Initial sizing
    updateGobiLogoSize();

    // Update on resize
    window.addEventListener('resize', updateGobiLogoSize);
  </script>
</section>

