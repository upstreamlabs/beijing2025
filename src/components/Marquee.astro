---
import projectsEn from "json/Marquee-upstream.json";
import projectsZh from "json/Marquee-upstream-zh.json";

interface Props {
  title?: string;
}

const pathname = Astro.url.pathname;
const isChinesePage = pathname.startsWith('/cn/');
const projects = isChinesePage ? projectsZh : projectsEn;
const { title = isChinesePage ? "参与展示的开源商业创新营项目" : "Featured Open Source Business Innovation Camp Projects" } = Astro.props;
---

<section
    class="section section-stats"
    data-theme-section="light"
    data-bg-section="light"
>
    <div class="container wide">
        <div class="row">
            <div class="col col-title">
                <h2>{title}</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="projects-marquee-container">
            <div class="projects-track">
                {
                    projects.map((project) => (
                        <div class="project-card">
                            <blockquote>{project.description}</blockquote>
                            <div class="project-info">
                                <div class="avatar-container">
                                    <img
                                        src={project.avatar}
                                        alt={project.name}
                                        class="avatar"
                                    />
                                </div>
                                <div class="project-details">
                                    <h3>{project.name}</h3>
                                    <div class="project-stats">
                                        <span class="stars">★ {project.stars}k <span>stars</span></span>
                                        <span class="age"> 
                                            <img
                                                src="/icons/month.svg"
                                                alt="Age in months"
                                                loading="lazy"
                                                width="14"
                                                height="14"
                                            /> {' '}
                                            {project.age} {' '}
                                            <span>months</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
                {
                    projects.map((project) => (
                        <div class="project-card">
                            <blockquote>{project.description}</blockquote>
                            <div class="project-info">
                                <div class="avatar-container">
                                    <img
                                        src={project.avatar}
                                        alt={project.name}
                                        class="avatar"
                                        loading="lazy"
                                        width="48"
                                        height="48"
                                    />
                                </div>
                                <div class="project-details">
                                    <h3>{project.name}</h3>
                                    <div class="project-stats">
                                        <span class="stars">★ {project.stars} <span style="font-size: 0.75rem;">stars</span></span>
                                        <span class="age"> 
                                            <img
                                                src="/icons/month.svg"
                                                alt="Age in months"
                                                loading="lazy"
                                                width="14"
                                                height="14"
                                            /> {' '}
                                            {project.age} {' '}
                                            <span style="font-size: 0.75rem;">months</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
  .section-stats h2 {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
  }

  .projects-marquee-container {
    overflow: hidden;
    width: 100%;
    position: relative;
  }

  .projects-track {
    display: flex;
    width: fit-content;
    animation: marquee 30s linear infinite;
  }

  .projects-track:hover {
    animation-play-state: paused;
  }

  .project-card {
    flex: 0 0 auto;
    width: 300px;
    margin: 0 1rem;
    padding: 1rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .project-card blockquote {
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
    color: #333;
    font-style: italic;
  }

  .project-info {
    display: flex;
    align-items: center;
  }

  .avatar-container {
    flex-shrink: 0;
    margin-right: 1rem;
  }

  .avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
  }

  .project-details h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    color: #2b74ff;
    text-align: center;
    font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .project-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.8rem;
    color: #666;
  }

  .stars, .age {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .project-card {
      width: 250px;
      margin: 0 0.5rem;
      padding: 0.75rem;
    }

    .project-card blockquote {
      font-size: 0.8rem;
    }

    .project-details h3 {
      font-size: 1rem;
      text-align: center;
      font-family: 'Manrope', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    }
  }
</style>