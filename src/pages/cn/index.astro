---
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import FeatureSpotlight from "components/FeatureSpotlight.astro";
import ProgramTimeline from "components/ProgramTimeline.astro";
import Cards from "components/Cards.astro";
import Button from "components/Button.astro";
import SimpleFAQ from "components/SimpleFAQ.astro";
import SellingPoints from "components/SellingPoints.astro";
import Marquee from "components/Marquee.astro";
import VenueInfoZh from "components/VenueInfoZh.astro";
import AgendaSchedule from "components/AgendaSchedule.astro";

// Import JSON data
import heroLinksData from "json/HeroLinksZh.json";
import sellingPointsData from "json/SellingPointsZh.json";
import tracksData from "json/TracksZh.json";
import speakerProfilesData from "json/SpeakerProfilesZh.json";
import faqData from "json/FAQZh.json";
import agendaData from "json/AgendaZh.json";

const heroLinks = heroLinksData;
const tracks = tracksData;
const speakerProfiles = speakerProfilesData;
const faqItems = faqData;
const agendaItems = agendaData;

const heroBadges = [
  // Badges removed as requested
];

const coorganizers = [
  {
    src: "/images/sponsors/innoecos-logo.png",
    alt: "INNOECOS"
  },
  {
    src: "/images/sponsors/csdn.png",
    alt: "CSDN"
  }
];
---

<Layout
  title="GOBI 2025：从源到业，从创到规模"
  description="开源是数字公共产品。GOBI 2025 连接开发者、企业与政策伙伴，探索从“源”到“产业”的可持续路径：以透明协作推动技术创新，以商业机制放大社会与经济价值。"
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="GOBI 2025"
>
  <Hero
    title="GOBI 2025 | 全球开源商业创新大会"
    tagline="开源商业与创新大会"
    mottoCn="Unlock the Source, Create the Future"
    mottoEn="释放源力，创造未来"
    date="2025.12.21"
    location="北京"
    backgroundVideo="/videos/GOBICONF-HERO.webm"
    videoPoster="/videos/GOBICONF-HERO-poster.jpg"
    links={heroLinks}
    badges={heroBadges}
    logosHeading="联合举办方"
    logos={coorganizers}
  />

  <FeatureSpotlight
    id="overview"
    title="GOBI 的使命"
    text="AI正成为连接开发者和创作者的终极桥梁，将海量人才前所未有地汇入开源生态。一个以创作者为核心的新商业范式正在崛起，它不再是简单地消费开源，而是成为赋能和放大开源公共数字产品的强力催化剂。GOBI 旨在将个体的创造力，转化为驱动产业未来的洪流。如果你是开源的掌舵者、开发者和创作者、生态连接者和价值发现者，欢迎加入GOBI 2025，共同定义并引领这场源力觉醒的伟大征程！"
    image="/images/homepage/wave.png"
    imageAlt="GOBI 2025"
    theme="light"
    background="lightgray"
  />

  <Cards
    id="speakers"
    title="高光讲师"
    description="来自不同领域的专家和实践者"
    cards={speakerProfiles}
    theme="light"
    background="light"
  />

  <AgendaSchedule />

  <Marquee title="参与展示的开源商业创新训练营项目" />

  <SellingPoints
    points={sellingPointsData}
    id="selling-points"
    theme="light"
    background="lightgray"
    title="GOBI 2025 让你在专家的洞见指导和社区的互动中，寻找创造的力量，重新再出发"
  />

  <VenueInfoZh
    subtitle="会议地点"
    title="北京中关村东升科技园万丽酒店"
    location="北京市海淀区东升科技园北街8号院6号楼"
    image="/images/homepage/dongsheng-marriot.webp"
    text="北京中关村东升科技园万丽酒店位于中关村核心区域，拥有现代化的会议设施和舒适的住宿环境，紧邻众多知名科技企业和高校，交通便利。"
    mapLatitude={40.0296}
    mapLongitude={116.3526}
    mapZoom={15}
  />

  
  {/* <SimpleFAQ
    id="faq"
    title="常见问答"
    items={faqItems}
    theme="light"
    background="light"
  /> */}

  <section class="section section-apply" id="apply" data-theme-section="dark" data-bg-section="dark">
    <div class="container">
      <div class="row">
        <div class="col">
          <h2 class="custom3">参与 GOBI 2025</h2>
          <p class="apply-motto">
            开源是数字公共产品。GOBI 2025 连接开发者、企业与政策伙伴，探索从“源”到“产业”的可持续路径。
          </p>
                    <div class="apply-actions">
            <Button
              text="立即报名"
              link="#register"
              class="btn primary xl btn-hover"
            />
            <Button
              text="提交演讲"
              link="#speakers"
              class="btn outline btn-hover xl"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .lead {
    font-size: 1.15rem;
    line-height: 1.7;
  }

  .section-apply {
    text-align: left;
    background: linear-gradient(135deg, rgba(43, 116, 255, 0.92), rgba(0, 200, 150, 0.88));
  }

  .section-apply h2 {
    font-family: 'Manrope', sans-serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
  }

  .section-apply p {
    max-width: 640px;
    font-size: 1.1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.88);
  }

  .apply-motto {
    font-family: 'Source Han Serif CN VF', 'Source Han Serif SC', 'Source Han Serif', 'Noto Serif CJK SC', serif;
    font-size: 1.3rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.95);
  }

  .apply-motto .separator {
    margin: 0 0.75rem;
    opacity: 0.6;
  }

  .apply-actions {
    margin-top: 2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .apply-actions .btn.primary span {
    color: #ffffff !important;
  }

  @media (max-width: 768px) {
    .lead {
      font-size: 1.02rem;
    }
  }
</style>

</Layout>